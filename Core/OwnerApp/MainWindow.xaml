<Window x:Class="OwnerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OwnerApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="EmployeeButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="10 15" x:Name="EmployeeButton">Employees</Button>
        <Button Click="ProfitButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="10 15" Grid.Column="1" x:Name="ProfitButton">Profit</Button>
        <Button Click="IngridientsButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="10 15" Grid.Row="1" x:Name="IngridientsButton">Ingridients</Button>
        <Button Click="FeedbackButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Padding="10 15" Grid.Column="1" Grid.Row="1" x:Name="FeedbackButton">Feedback</Button>
    </Grid>
</Window>
