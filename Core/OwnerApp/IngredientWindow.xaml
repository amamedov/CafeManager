<Window x:Class="OwnerApp.IngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OwnerApp"
        mc:Ignorable="d"
        Title="IngredientWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <ListBox Margin="8" x:Name="IngredientsListBox"></ListBox>
        <Button Click="BackButton_Click" x:Name="BackButton" Grid.Row="1" VerticalAlignment="Center" FontSize="20" Margin="20" Padding="20 10" HorizontalAlignment="Left">Back</Button>
        <Button Click="ViewInfoButton_Click" x:Name="ViewInfoButton" Grid.Row="1" VerticalAlignment="Center" FontSize="20" Margin="20" Padding="20 10" HorizontalAlignment="Right">View info</Button>
    </Grid>
</Window>
